<script>
    $(document).ready(function () {
    	$.noConflict();
    	
    	$("time.timeago").timeago();


        $("#selectChapter").hide();
        $("#submitBtn").prop("disabled", true);
    
      $("#selectBook").change(function (event) {
    
        $("#selectChapter").show();
    
        {% for key, chap in bookMap %}
            var chapter = $('#selectBook').find(":selected").text();
            if(chapter == "{{ key }}")
            {
                $('#selectChapter').empty();
    
                {% for c in chap %}
                    $('#selectChapter').append( "{{ c|raw }}" );
                {% endfor %}
    
                $('#submitBtn').addClass('btn-gradient');
                $("#submitBtn").prop("disabled", false);
            }
      {% endfor %}
    
        let selbook = $("#selectBook").val();
        let bibleVersion = 'kjv';
        if( $("#selectVersion").find(":selected").val() != '' ) {
    	    bibleVersion = $("#selectVersion").val();
    	}
    
        $("#submitBtn").click( function(){
            window.location.replace( 
                "{{ base_url }}" + 
                'bible/' + 
                bibleVersion + 
                '/' + 
                selbook.replaceAll(' ', '-') + 
                '/' +  
                $('#selectChapter').find(":selected").val()
            )
        });
      });
    });
</script>