    <!-- - `.position-absolute`, `top-0` & `end-0` to position the toasts in the upper right corner -->
    <!-- - `.p-3` to prevent the toasts from sticking to the edge of the container  -->
    <div class="toast-container position-absolute top-0 end-0 p-3">
        <div
            class="bs-toast toast toast-placement-ex m-2 fade top-0 end-0 bs-toast fade align-items-center text-dark bg-light border-0"
            role="alert"
            aria-live="assertive"
            aria-atomic="true" 
            data-bs-autohide="true" 
            data-bs-animation="true" 
            data-bs-delay="15000"  
            id="toast-pm" 
            >
            <div class="toast-header align-items-center text-white bg-primary border-0">
                <i class="bx bx-bell me-2"></i>
                <div class="me-auto fw-semibold">Unread Private Message</div>
                <small><time class="timeago" datetime="{{ last_pm_time }}" title="{{ last_pm_time }}" id="pmtime">{{ last_pm_time }}</time></small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                Hi {{ session['wog-username'] }}, you have unread private messages from someone in the community. To view them, simply click on your avatar, and then the Inbox link in the menu. <i class="fa-solid fa-hands-praying"></i>
            </div>
        </div>
        <div
            class="bs-toast toast toast-placement-ex m-2 fade top-0 end-0 bs-toast fade align-items-center text-dark bg-light border-0"
            role="alert"
            aria-live="assertive"
            aria-atomic="true" 
