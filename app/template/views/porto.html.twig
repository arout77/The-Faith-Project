    <script>
        var p = document.getElementById("philly"); 
        var r = document.getElementById("rejoice"); 
        var x = document.getElementById("thefish"); 
        var y = document.getElementById("theword"); 
        var z = document.getElementById("faithtalk"); 
        
        function playPhillyAudio() { 
          p.play(); 
          pauseFishAudio();
          pauseRejoiceAudio();
          pauseWordAudio();
          pauseFaithAudio();
          $("#radioPanelLabel").html("Now playing <span style='color: blue;'>560AM Philadelphia's Christian Radio</span>");
          $("#fishwaves").hide();
          $("#wordwaves").hide();
          $("#faithwaves").hide();
          $("#phillywaves").show();
          $("#rejoicewaves").hide();
        } 
        
        function pausePhillyAudio() { 
          p.pause(); 
        }

        function playRejoiceAudio() { 
          r.play(); 
          pauseFishAudio();
          pauseWordAudio();
          pauseFaithAudio();
          pausePhillyAudio();
          $("#radioPanelLabel").html("Now playing <span style='color: blue;'>105.5 FM Rejoice!</span>");
          $("#fishwaves").hide();
          $("#wordwaves").hide();
          $("#faithwaves").hide();
          $("#phillywaves").hide();
          $("#rejoicewaves").show();
        } 
        
        function pauseRejoiceAudio() { 
          r.pause(); 
        } 
        
        function playFishAudio() { 
          x.play(); 
          pauseWordAudio();
          pauseFaithAudio();
          pausePhillyAudio();
          pauseRejoiceAudio();
          $("#radioPanelLabel").html("Now playing <span style='color: blue;'>95.9 The Fish</span>");
          $("#fishwaves").show();
          $("#wordwaves").hide();
          $("#faithwaves").hide();
          $("#phillywaves").hide();
          $("#rejoicewaves").hide();
        } 
        
        function pauseFishAudio() { 
          x.pause(); 
        } 
        
        function playWordAudio() { 
          y.play();
          pauseFishAudio();
          pauseFaithAudio();
          pausePhillyAudio();
          pauseRejoiceAudio();
          $("#radioPanelLabel").html("Now playing <span style='color: blue;'>98.3 The Word</span>");
          $("#fishwaves").hide();
          $("#wordwaves").show();
          $("#faithwaves").hide();
          $("#phillywaves").hide();
          $("#rejoicewaves").hide();
        } 
        
        function pauseWordAudio() { 
          y.pause(); 
        } 
        
        function playFaithAudio() { 
          z.play();
          pauseFishAudio();
          pauseWordAudio();
          pausePhillyAudio();
          pauseRejoiceAudio();
          $("#radioPanelLabel").html("Now playing <span style='color: blue;'>99.5 Faith Talk</span>");
          $("#fishwaves").hide();
          $("#wordwaves").hide();
          $("#faithwaves").show();
          $("#phillywaves").hide();
          $("#rejoicewaves").hide();
        } 
        
        function pauseFaithAudio() { 
          z.pause(); 
        } 
    </script>

